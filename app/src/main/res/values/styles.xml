<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_movie_list</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="PreferencesTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/background_movie_list</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textColorSecondary">#FFF</item>
        <item name="android:textColorTertiary">#FFF</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>

</resources>
